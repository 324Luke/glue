{
  "name": "@spacebin-org/spacebin",
  "version": "0.0.0",
  "private": true,
  "description": "Text sharing for the final frontier",
  "author": "Luke Whrit <me@lukewhrit.xyz> (https://lukewhrit.xyz)",
  "contributors": [
    {
      "name": "Luke Whrit",
      "email": "lukewhrit@gmail.com",
      "url": "https://lukewhrit.xyz"
    }
  ],
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' --ignore 'src/**/*.spec.ts' --exec \"ts-node src/server.ts\"",
    "build": "./node_modules/.bin/tsc --outDir dist --project ./ --pretty",
    "start": "yarn build && cross-env NODE_ENV=production node dist/server.js",
    "test": "jest",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@types/koa-bodyparser": "^4.3.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-joi-router": "^6.0.2",
    "koa-morgan": "^1.0.1",
    "koa-ratelimit": "^4.2.1",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.4",
    "@types/koa": "^2.11.3",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-joi-router": "^5.2.3",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-ratelimit": "^4.2.1",
    "@types/koa__cors": "^3.0.1",
    "@types/node": "^14.0.22",
    "@types/randomstring": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.3",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.6"
  },
  "optionalDependencies": {
    "sqlite3": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint --fix"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
