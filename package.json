{
  "name": "@spacebin-org/spacebin",
  "version": "0.0.0",
  "private": true,
  "description": "Text sharing for the final frontier",
  "author": "Luke Whrit <me@lukewhrit.xyz> (https://lukewhrit.xyz)",
  "contributors": [
    {
      "name": "Luke Whrit",
      "email": "lukewhrit@gmail.com",
      "url": "https://lukewhrit.xyz"
    }
  ],
  "main": "src/server.ts",
  "scripts": {
    "dev": "yarn cross-env NODE_ENV=development yarn nodemon --watch 'src/**/*.ts' --ignore 'src/__tests__/*.ts' --exec \"ts-node src/server.ts\"",
    "build": "yarn tsc --outDir dist --project ./ --pretty",
    "start": "yarn build && yarn cross-env NODE_ENV=production node dist/server.js",
    "test": "yarn build && yarn ava",
    "lint": "yarn eslint --ext .js,.ts ."
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/express-rate-limit": "^5.1.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/multer": "^1.4.4",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.1.0",
    "multer": "^1.4.2",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/cors": "^2.8.7",
    "@types/helmet": "^0.0.48",
    "@types/node": "^14.6.0",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "ava": "^3.12.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "has-value": "^2.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "optionalDependencies": {
    "sqlite3": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint --fix"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
